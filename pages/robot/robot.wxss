/* pages/robot/robot.wxss */

page {
  background-color: #f0f0f0;
  overflow-x: hidden;
}

.page-body {
  overflow-x: hidden;
}

.tab {
  padding: 20rpx 20rpx 40rpx 50rpx;
  height: 20%;
  background-color: white;
}

.tab .tent {
  font-size: 33rpx;
  margin-bottom: 30rpx;
}

.jia_img {
  height: 80rpx;
  width: 90rpx;
}

.new_imgtent {
  height: 180rpx;
  width: 190rpx;
  border-radius: 50%;
}

.tab .fabu {
  font-size: 33rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.xiahuaxia {
  width: 80%;
  text-align: center;
  margin: 0 auto;
  position: relative;
  top: 60rpx;
}

.time {
  text-align: center;
  padding: 5rpx 20rpx 5rpx 20rpx;
  width: 100%;
  font-size: 26rpx;
  background-color: #e8e8e8;
}

.new_top_txt {
  width: 50%;
  position: relative;
  top: 38rpx;
  text-align: center;
  margin: 0 auto;
  font-size: 30rpx;
  color: #787878;
  background-color: #f7f7f7;
}

/* 聊天内容 */
.page_row{
  width: 500rpx;
}
.news {
  margin-top: 30rpx;
  text-align: center;
  /* height:100%; */
  margin-bottom: 150rpx;
}

.img_null {
  height: 60rpx;
}

.l {
  height: 5rpx;
  width: 20%;
  margin-top: 30rpx;
  color: #000;
}

/* 聊天 */

.my_right {
  float: right;
  position: relative;
  right: 40rpx;
}

.you_left {
  float: left;
  position: relative;
  left: 5rpx;
}

.new_img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.new_txt {
  width: 80%;
  height: 100%;
  word-break:break-all;
  border-radius: 7px;
  background-color: #95d4ff;
  border-color: grey;
  padding: 0rpx 10rpx 0rpx 0rpx;
}
.new_txt_my {
  width: 80%;
  height: 100%;
  word-break:break-all;
  border-radius: 7px;
  background-color: #ffffff;
  padding: 0rpx 10rpx 0rpx 0rpx;
}

.sanjiao {
  top: 20rpx;
  position: relative;
  width: 0px;
  height: 0px;
  border-width: 10px;
  border-style: solid;
}

.my {
  border-color: transparent transparent transparent #95d4ff;
}

.you {
  border-color: transparent #95d4ff transparent transparent;
}

.sendmessage {
  background-color: white;
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  padding-top: 10rpx;
  display: flex;
  flex-direction: row;
}
.send{
  background-color: #FFCC00;
  color: #FFF;
}
.sendmessage input {
  width: 80%;
  height: 40px;
  background-color: white;
  line-height: 40px;
  font-size: 14px;
  border: 1px solid #d0d0d0;
  margin-left: 20rpx;
  padding-left: 20rpx;
}

.sendmessage button {
  border: 1px solid white;
  width: 18%;
  height: 40px;
  background: #fff;
  color: #000;
  line-height: 40px;
  font-size: 14px;
}

.historycon {
  height: 80%;
  width: 100%;
  flex-direction: column;
  display: flex;
  margin-top: 0rpx;
  border-top: 0rpx;
}

.hei {
  margin-top: 50px;
  height: 20rpx;
}

.history {
  height: 95%;
  width: 100%;
  margin-top: 15px;
  margin: 10px;
  font-size: 14px;
  line-height: 40px;
  word-break: break-all;
}
