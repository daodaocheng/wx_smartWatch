/* pages/safeArea/safeArea.wxss */

page {
  height: 100%;
}

.content {
  width: auto;
  height: 92%;
  color: #f2f2f2;
  border: 1px solid #f2f2f2;
}

.history {
  height: 95%;
  width: 100%;
  /* margin-top: 15px; */
  /* margin: 10px 0; */
  line-height: 40px;
}

.footer {
  width: auto;
  height: 8%;
  border: 1px solid #f2f2f2;
}

.btn-content {
  display: flex;
  flex-direction: row;
  font-size: 34rpx;
  width: 100%;
  line-height: 86rpx;
}

.btn-left {
  width: 50%;
  color: #009cce;
  background-color: #fff;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-right {
  width: 50%;
  color: #009cce;
  background-color: #fff;
  text-align: center;
}

.input-wrap {
  position: relative;
  margin: 20rpx 10rpx 0 10rpx;
}

.modalSecond{
  z-index: 5000;
}

.modal-warn {
  position:absolute;
  z-index: 9999;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.list {
  padding-top: 25rpx;
}

.list__body {
  display: flex;
  align-items: center;
  min-height: 90rpx;
  line-height: 1.4;
  padding: 20rpx 30rpx 20rpx 0;
  margin-left: 25rpx;
  margin-right: 25rpx;
  margin-top: 25rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 8px;
  font-size: 32rpx;
  color: #333;
}

.list__none {
  border: none;
}

.list__image {
  width: 75rpx;
  height: 75rpx;
  margin-left: 30rpx;
}

.list__icon {
  margin-right: 30rpx;
}

.list__title {
  flex: 1;
}

.list__title_top {
  display: flex;
  flex-direction: row;
  /* border: solid 1px #333; */
  width: 100%;
}

.list__title--main {
  /* border: solid 1px #333; */
  width: 60%;
}

.list__desc--text {
  /* border: solid 1px #333; */
  width: 40%;
}

.list__title--sub {
  margin-top: 14rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #999;
}

.list__desc--dot {
  width: 16rpx;
  height: 16rpx;
  margin-right: 18rpx;
  border-radius: 16rpx;
}

.list__desc--text {
  color: #999;
  font-size: 24rpx;
}

.list__desc--arrow {
  margin-left: 8rpx;
}
